{% extends 'base.html.twig' %}

{% block title %}Candidate
{% endblock %}

{% block body %}
	<h1>Candidate</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ candidate.id }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ candidate.lastname }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ candidate.firstname }}</td>
			</tr>
			<tr>
				<th>CvName</th>
				<td>{{ candidate.cvName }}</td>
			</tr>
			<tr>
				<th>IsValided</th>
				<td>{{ candidate.isValided ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>IsRGPD</th>
				<td>{{ candidate.isRGPD ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_candidate_index') }}">back to list</a>

	<a href="{{ path('app_candidate_edit', {'id': candidate.id}) }}">edit</a>

	{{ include('pages/candidate/_delete_form.html.twig') }}
{% endblock %}
