{% extends 'base.html.twig' %}

{% block title %}Recruiter
{% endblock %}

{% block body %}
	<h1>Recruiter</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ recruiter.id }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ recruiter.lastname }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ recruiter.firstname }}</td>
			</tr>
			<tr>
				<th>AddressFirm</th>
				<td>{{ recruiter.addressFirm }}</td>
			</tr>
			<tr>
				<th>FirmName</th>
				<td>{{ recruiter.firmName }}</td>
			</tr>
			<tr>
				<th>Zipcode</th>
				<td>{{ recruiter.zipcode }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ recruiter.city }}</td>
			</tr>
			<tr>
				<th>IsValided</th>
				<td>{{ recruiter.isValided ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>IsRGPD</th>
				<td>{{ recruiter.isRGPD ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_recruiter_index') }}">back to list</a>

	<a href="{{ path('app_recruiter_edit', {'id': recruiter.id}) }}">edit</a>

	{{ include('pages/recruiter/_delete_form.html.twig') }}
{% endblock %}
