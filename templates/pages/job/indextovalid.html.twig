{% extends 'base.html.twig' %}

{% block title %}Liste des annonces
{% endblock %}

{% block body %}
<div class="container mt-4">
	<h1>Liste des annonces</h1>

	{% if is_granted('ROLE_CONSULTANT')  %}


		<table class="table">
			<thead>
				<tr>
					<th>Réf.</th>
					<th>Titre</th>
					<th>Lieu</th>
					<th>Description</th>
					<th>Public</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>

				<div class="container mt-4">
					<div class="row">


						<h1>Voici la liste des annonces à rendre public</h1>

						{% for job in jobs %}
							<tr>
								{% if job.isVisible == 0 %}

									<td>{{ job.id }}</td>
									<td>{{ job.title }}</td>
									<td>{{ job.workPlace }}</td>
									<td>{{ job.description }}</td>
									<td>{{ job.isVisible ? 'Oui' : 'Non' }}</td>
									<td>
										<a href="{{ path('app_job_edit', {'id': job.id}) }}">Valider</a>
										{# <a href="{{ path('app_job_edit', {'id': job.id}) }}">edit</a> #}
									</td>
								{% endif %}

							</tr>
						{% else %}
							<tr>
								<td colspan="6">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				{# <a href="{{ path('app_job_new') }}">Create new</a> #}
			</tbody>
		</div>
	</div>
</div></div></div></div>{% endif %}</div>{% endblock %}
