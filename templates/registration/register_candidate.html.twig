{% extends 'base.html.twig' %}

{% block title %}Inscription Candidat
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Vous souhaitez trouver le poste idéal, alors inscrivez-vous dès maintenant!</h1>

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de Passe'
        }) }}
		{{ form_row(registrationForm.isRGPD) }}


		<button type="submit" class="btn btn-secondary btn-lg mt-4">Enregitrez-vous</button>

		{{ form_end(registrationForm) }}</div>

{% endblock %}
