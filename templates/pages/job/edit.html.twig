{% extends 'base.html.twig' %}

{% block title %}Validation de l'annonce
{% endblock %}

{% block body %}
	{% if app.user %}
		{% if is_granted('ROLE_CONSULTANT')  %}

			<div class="container mt-4">
				<h1>Validation de l'annonce</h1>


				{{ include('pages/job/_form.html.twig', {'button_label': 'Sauvegarder vos modifications'}) }}

				<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_job_index') }}">Retour à la liste</a>


				{{ include('pages/job/_delete_form.html.twig') }}</div>
		{% else %}
			<div class="container mt-4">
				<h2>Vous n'êtes pas autorisé(e) à valider les annonces.</h2>
				<a class="" href="{{ path('home.index')}}">Retour Accueil</a>

			</div>
		{% endif %}
	{% endif %}

{% endblock %}
