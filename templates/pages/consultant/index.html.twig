{% extends 'base.html.twig' %}

{% block title %}Liste des consultants
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Liste des consultants
		</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Téléphone</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for consultant in consultants %}
					<tr>
						<td>{{ consultant.id }}</td>
						<td>{{ consultant.lastname }}</td>
						<td>{{ consultant.firstname }}</td>
						<td>{{ consultant.tel }}</td>
						<td>
							<a href="{{ path('app_consultant_show', {'id': consultant.id}) }}">Voir</a>
							<a href="{{ path('app_consultant_edit', {'id': consultant.id}) }}">Compléter</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Pas de consultants</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(consultants) }}
		</div>

		{# <a href="{{ path('app_consultant_new') }}">Créer un nouveau consultant</a> #}
	</div>

{% endblock %}
