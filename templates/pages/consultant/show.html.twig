{% extends 'base.html.twig' %}

{% block title %}Profil Consultant
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Profil Consultant</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ consultant.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ consultant.user.lastname }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ consultant.user.firstname }}</td>
				</tr>
				<tr>
					<th>Téléphone</th>
					<td>{{ consultant.tel }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_consultant_index') }}">Retour au menu</a>


		<a class="btn btn-secondary btn-lg mt-4" href="{{ path('app_user_edit', {'id': consultant.user.id}) }}">Modifier</a>


		{{ include('pages/consultant/_delete_form.html.twig') }}</div>

{% endblock %}
