{% extends 'base.html.twig' %}

{% block title %}Candidatures
{% endblock %}

{% block body %}

	<div class="container mt-4">

		<h1>Voici la liste de vos candidatures</h1>
		<table class="table ">
			<thead>
				<tr>
					<th>Titre de l'annonce</th>
					<th>Statut</th>
					<th>Action</th>
				</tr>
			</thead>
			{% for candidature in candidatures %}
				<tr>
					<td>{{ candidature.job.title }}</td>
					<td>{{ candidature.isvalided ? 'Validé' : 'En attente' }}</td>
					<td>
						<a class="btn btn-secondary btn " href="{{ path('app_job_show', {'id': candidature.job.id}) }}">Plus de détails</a>

					</td>
				</tr>
			{% endfor %}
		</div>
	</table>
{% endblock %}
