{% extends 'base.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block body %}
	<div class="mt-4 container">
		<h1>Mon profil</h1>

		<table class="table">
			<tbody>

				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Prénom
					</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Nom
					</th>
					<td>{{ user.lastname }}</td>
				</tr>


				<tr>
					<th>Créé le
					</th>
					<td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
				</tr>
				{% if app.user.recruiter == true %}

					<tr>
						<th>Nom de la société</th>
						<td>{{ user.recruiter.firmName }}</td>
					</tr>
					<tr>
						<th>Adresse de la société</th>
						<td>{{ user.recruiter.addressFirm }}</td>
					</tr>
					<tr>
						<th></th>
						<td>{{ user.recruiter.zipcode }}</td>
					</tr>
					<tr>
						<th></th>
						<td>{{ user.recruiter.city }}</td>
					</tr>
				{% endif %}


			</tbody>
		</table>

		<a href="{{ path('home.index') }}">Retour accueil</a>

		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="ms-4">Modifier l'état civil</a>

		{{ include('pages/user/_delete_form.html.twig') }}</div>

{% endblock %}
